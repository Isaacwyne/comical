import:
  - ~/.config/alacritty/fonts.yml
  # - ~/.config/alacritty/colors.yml

env:
  TERM: alacritty
  WINIT_X11_SCALE_FACTOR: '1.0'

window:
  dimensions:
    columns: 82
    lines: 23

  padding:
    x: 0
    y: 0

  decorations: full
  startup_mode: Windowed
  dynamic_title: true

  # scrolling
  history: 10000
  multiplier: 3

  # background opacity
  opacity: 0.8

  # cursor
  cursor:
    style:
      shape: Block
      blinking: On

    unfocused_hollow: true

    # live config reload
    live_config_reload: true
