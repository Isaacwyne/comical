## FUNCTIONS  -------------------------------------- ##
yt-vid() {
    yt-dlp -f "best[height>=720]" -o '/media/xarc/Backup/videos/%(title)s.%(ext)s' $*
}

yt-vid1() {
    yt-dlp -f "best[height>=720]" -o '%(title)s.%(ext)s' $*
}

yt-aud() {
    yt-dlp -f 'ba' -x --audio-format mp3 -o '/media/xarc/Backup/music/%(title)s.%(ext)s' $*
}
