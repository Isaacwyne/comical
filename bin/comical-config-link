#!/bin/bash

# Link all the key config files to internal versions for quicker testing
ln -nsf ~/comical/config/hypr/hyprland.conf ~/.config/hypr/
ln -nsf ~/comical/config/hypr/hypridle.conf ~/.config/hypr/
ln -nsf ~/comical/config/waybar/config ~/.config/waybar/
ln -nsf ~/comical/config/wofi/config ~/.config/wofi/
